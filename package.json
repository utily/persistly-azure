{
	"name": "@issuefab/library-template",
	"version": "0.0.0",
	"description": "Template for Typescript library.",
	"author": "Issuefab AB",
	"license": "MIT",
	"repository": "https://github.com/issuefab/library-template",
	"bugs": {
		"url": "https://github.com/issuefab/library-template/issues"
	},
	"homepage": "https://issuefab.com",
	"private": false,
	"main": "dist/index.js",
	"typings": "dist/index.d.ts",
	"git": {
		"tagName": "v${version}"
	},
	"github": {
		"release": true
	},
	"publishConfig": {
		"registry": "https://npm.pkg.github.com"
	},
	"jest": {
		"globals": {
			"ts-jest": {
				"tsConfig": "tsconfig.test.json"
			}
		},
		"transform": {
			"^.+\\.(j|t)sx?$": "ts-jest"
		},
		"transformIgnorePatterns": [
			"<rootDir>/node_modules/(?!(cryptly|authly|isoly|gracely)/.*)"
		],
		"testEnvironment": "node",
		"testRegex": "((\\.|/)(test|spec))(\\.|\\/.+)(jsx?|tsx?)$",
		"testPathIgnorePatterns": [
			"node_modules/",
			"dist/"
		],
		"collectCoverageFrom": [
			"**/*.{ts,tsx,js,jsx}",
			"!**/node_modules/**",
			"!**/dist/**"
		],
		"preset": "ts-jest",
		"testMatch": null
	},
	"scripts": {
		"dev": "watch 'npm run build' .",
		"lint": "eslint '**/*.{js,ts,tsx}'",
		"fix": "eslint '**/*.{js,ts,tsx}' --fix",
		"build": "tsc -p .",
		"test": "jest --maxWorkers=2",
		"test:watch": "watch jest",
		"prepare": "npm run build",
		"clean": "rm -rf dist node_modules coverage"
	},
	"devDependencies": {
		"@babel/core": "^7.11.0",
		"@types/jest": "^26.0.14",
		"@types/node": "^14.0.13",
		"@typescript-eslint/eslint-plugin": "4.1.1",
		"@typescript-eslint/parser": "4.1.1",
		"babel-core": "^6.26.3",
		"babel-jest": "^26.0.1",
		"eslint": "7.18.0",
		"eslint-plugin-prettierx": "github:nilssonemma/eslint-plugin-prettierx#master",
		"eslint-plugin-simple-import-sort": "^7.0.0",
		"jest": "^26.4.2",
		"prettierx": "github:simonmika/prettierx#newline-before-clause",
		"ts-jest": "^26.4.0",
		"typescript": "^4.0.3",
		"watch": "^0.13.0"
	}
}
