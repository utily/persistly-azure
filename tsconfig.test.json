{
	"compilerOptions": {
		"target": "es2019",
		"module": "es2015",
		"allowJs": true,
		"allowSyntheticDefaultImports":true,
		"esModuleInterop": true,
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitThis": true,
		"strictNullChecks": true,
		"sourceMap": true,
		"outDir": "dist",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"paths": { 
			"*": ["types/*"] 
		}

	},
	"files": ["index.ts"],
	"typeAcquisition": {
		"enable": true
	}
}
